Bootstrap: docker
From: ubuntu:jammy


%files

%post
	export DEBIAN_FRONTEND="noninteractive"
	apt -y update && apt -y dist-upgrade
	apt -y install wget openjdk-8-jre openjdk-8-jdk

	# Download BEAST 2.6.6
    cd /opt
    wget https://github.com/beast-dev/beast-mcmc/releases/download/v10.5.0-beta3/BEAST_X_v10.5.0-beta3.tgz
    tar -zxvf BEASTv10.5.0-beta3.tgz

	# Clean up
	rm /opt/*.tgz

%environment
 	export LC_ALL=C.UTF-8
    export PATH=/opt/BEASTv10.5.0-beta3/bin:$PATH
	export JAVA_OPTS="-Xmx140G"

