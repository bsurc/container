Bootstrap: localimage
From: {{GUIX_SQUASHFS}}

%files
  testload.R /opt/

%post
  # create bind path dirs for Borah
  mkdir -p /bsuhome /bsuscratch /cm/shared

  # necessary for data.table install
  mkdir -p /usr/bin
  ln -snf /bin/env /usr/bin/env

  Rscript -e "install.packages('marginaleffects', repo='https://ftp.osuosl.org/pub/cran/')"

%test
  Rscript /opt/testload.R

%labels
  author Jenny Fothergill <jennyfothergill@boisestate.edu>
  github.com/bsurc/container git rev={{GIT_REV}}
